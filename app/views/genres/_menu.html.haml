-if Genre.edit_by?(@current_user)
  .btn-toolbar
    =link_to edit_genre_path(@genre),class: 'btn btn-primary' do
      =fa_icon 'edit'
      Редактировать
    -if @genre.can_destroy?
      =link_to @genre, data: {method: :delete, confirm: t('helpers.sure')}, class: 'btn btn-danger' do
        =fa_icon 'trash'
        Удалить
